<UserControl x:Class="PDIWT.Waterway.Lock.UI.MountPierP1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDIWT.Waterway.Lock.UI"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="430" d:DesignWidth="300"
             Width="300" MinHeight="430">
    <UserControl.Resources>
        <Style x:Key="PropertyGridErrorStyle" TargetType="{x:Type xctk:PropertyGrid}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Validation.ErrorTemplate">
                        <Setter.Value>
                            <ControlTemplate x:Name="PropertyGridErrorTemplate">
                                <DockPanel>
                                    <Border BorderBrush="Red" BorderThickness="1">
                                        <AdornedElementPlaceholder />
                                    </Border>
                                </DockPanel>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TextBoxErrorStyle" TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Validation.ErrorTemplate">
                        <Setter.Value>
                            <ControlTemplate x:Name="PropertyGridErrorTemplate">
                                <DockPanel>
                                    <Border BorderBrush="Red" BorderThickness="1">
                                        <AdornedElementPlaceholder />
                                    </Border>
                                </DockPanel>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="2" Width="300">
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>-->
        <!--<Image Grid.Column="0" />-->
        <Grid.RowDefinitions>
            <RowDefinition Height="400" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <GroupBox Header="模板">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <ListBox ItemsSource="{Binding Datas}" SelectedItem="{Binding SelectedData}" />
                <Button
                    Grid.Row="1"
                    Margin="2"
                    Command="{Binding AddToTemplate}"
                    Content="加入模板" />
                <Button
                    Grid.Row="2"
                    Margin="2"
                    Content="从模板中删除" />
            </Grid>
        </GroupBox>
        <xctk:PropertyGrid Grid.Column="1"
            x:Name="InputPropertyGrid"
            Grid.Row="0"
            Margin="2"
            AutoGenerateProperties="True"
            SelectedObject="{Binding SelectedData, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True, ValidatesOnExceptions=True, UpdateSourceTrigger=PropertyChanged}"
            ShowSearchBox="False"
            ShowSortOptions="False"
            ShowSummary="False"
            ShowTitle="False"
            Style="{StaticResource PropertyGridErrorStyle}" Grid.ColumnSpan="1" />
        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="5,0"
                Command="{Binding ShowPicture}"
                Content="示意图" />
        <!--<Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="5,0"
                Command="{Binding ShowPicture}"
                Content="示意图" />
            --><!--<Button
                Grid.Column="1"
                Margin="5,0"
                Command="{Binding ShowTemplates}"
                Content="选择模板" />-->
            <!--<TextBox Style="{StaticResource TextBoxErrorStyle}" Text="{Binding Text, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />--><!--
        </Grid>-->
    </Grid>
</UserControl>
